        </div>
    </div>
    <div class="container">
        <footer class="py-4 bg-dark flex-shrink-0 mt-4">
            <div class="container text-center">
                <a class="text-muted">opendict v0.1.3</a>
            </div>
        </footer>
    </div>
    @await Html.PartialAsync("_Footer")
